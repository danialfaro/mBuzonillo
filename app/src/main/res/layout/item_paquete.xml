<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="#166392B6"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imagen_paquete"
        android:layout_width="76dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/boxicon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombre_paquete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Amazon Cable Tipo C X1" />

        <TextView
            android:id="@+id/fecha_paquete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14/10/2021" />
    </LinearLayout>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imageFilterView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24">

    </androidx.constraintlayout.utils.widget.ImageFilterView>

</LinearLayout>